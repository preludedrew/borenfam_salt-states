{% load_yaml as plex %}
{# version: 1.0.0.2261-a17e99e #}
version: 1.2.7.2987-1bef33a
data_dir: /nfs/data/plex/
symlink_dir: '/var/lib/plexmediaserver/Library/Application Support/Plex Media Server'
{% endload %}

{% set arch = 'amd64' if salt['grains.get']('cpuarch') == 'x86_64' else 'i386' %}
{% set url = 'https://downloads.plex.tv/plex-media-server/' + plex.version + '/plexmediaserver_' + plex.version + '_' + arch + '.deb' %}

{% do plex.update({'url': url}) %}
